[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.css]
indent_size = 2

[*.js]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.min.css]
indent_style = ignore
insert_final_newline = ignore

[*.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab
